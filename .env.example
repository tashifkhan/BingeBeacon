# ============================================================
# BingeBeacon â€” Root Configuration (Backend + Frontend )
# ============================================================

# --- Server ---
SERVER_PORT=8080
SERVER_ENVIRONMENT=development # development | production

# --- Database (PostgreSQL) ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=bingebeacon
DB_SSLMODE=disable

# --- Redis ---
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# --- JWT ---
JWT_SECRET=your_jwt_secret_key_change_me
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=168h

# --- External APIs ---
TMDB_API_KEY=your_tmdb_api_key
TMDB_BASE_URL=https://api.themoviedb.org/3

OMDB_API_KEY=your_omdb_api_key
OMDB_BASE_URL=https://www.omdbapi.com

# --- Firebase (Backend Admin) ---
# Path to your Firebase service account JSON file
FCM_CREDENTIALS_FILE=firebase-credentials.json

# --- Firebase (Frontend Client) ---
# These are used by the Next.js app (web/)
# They must be prefixed with NEXT_PUBLIC_ to be accessible in the browser
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_public_vapid_key

# --- Frontend API ---
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
